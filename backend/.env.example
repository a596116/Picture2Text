# Application Settings
APP_NAME=FastAPI Application
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api/v1
PORT=8000

# Database Settings (MSSQL)
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# JWT Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# AI Service Settings
# 選擇 AI 服務類型: "openai" 或 "ollama"
AI_SERVICE_TYPE=openai

# OpenAI Settings (當 AI_SERVICE_TYPE=openai 時使用)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# Ollama Settings (當 AI_SERVICE_TYPE=ollama 時使用)
# Ollama 默認運行在 http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434/v1
# 支援視覺的模型，例如: llava, llava:13b, llava:34b 等
OLLAMA_MODEL=llava